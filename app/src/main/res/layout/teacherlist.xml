<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:outlineAmbientShadowColor="@color/colorPrimary"
    app:cardBackgroundColor="@color/colorPrimary"
    app:rippleColor="@color/colorPrimary"
    android:backgroundTint="@color/colorPrimary"

    android:layout_marginBottom="8dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp">

    <View
        android:id="@+id/viewColorTag"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:background="@color/colorBackground"
        android:paddingBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:orientation="vertical">

            <TextView
                android:id="@+id/teachername"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="6dp"
                android:text="dr.shravan suthar"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/black"
                android:textSize="19dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingStart="6dp"
                android:text="Course:"
                android:textColor="#000"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/teachercourse"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="32dp"
                android:text="BSCIT,MSCIT"
                android:textAlignment="center"
                android:textColor="@color/grey"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="30dp"
                android:paddingStart="6dp"
                android:text="Degree:"
                android:textColor="#000"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/degree"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="270dp"
                android:layout_marginLeft="78dp"
                android:layout_marginTop="32dp"
                android:text="PHD"
                android:textAlignment="center"
                android:textColor="@color/grey"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="58dp"
                android:paddingStart="6dp"
                android:text="Email:"
                android:textColor="#000"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/teacheremail"
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="61dp"
                android:maxLines="4"
                android:paddingStart="12dp"
                android:text="shravansutharkumar@gmail.com"
                android:textColor="@color/grey"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="87dp"
                android:paddingStart="6dp"
                android:text="Address:"
                android:textColor="#000"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/teacheraddress"
                android:layout_width="329dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="88dp"
                android:maxLines="4"
                android:paddingStart="12dp"
                android:text="ass"
                android:textColor="@color/grey"
                android:textSize="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#242424" />
        </RelativeLayout>
    </RelativeLayout></com.google.android.material.card.MaterialCardView>